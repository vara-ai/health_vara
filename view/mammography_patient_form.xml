<form>
    <!-- Mammography Patient -->
    <group string="Patient Summary" id="patient_summary">
        <label name="name"/>
        <field name="name" colspan="3"/>
        <label name="dob"/>
        <field name="dob" width="80"/>
        <label name="puid"/>
        <field name="puid"/>
        <field name="doctor_referrals" colspan="4"/>
        <label name="image_acquisition_date"/>
        <field name="image_acquisition_date"/>
        <label name="assessment_date"/>
        <field name="assessment_date"/>
    </group>
    <newline/>
    <group string="Anamnesis" id="patient_anamnesis">
    </group>
    <newline/>
    <group string="Other important information" id="patient_other_info">
        <field height="100" name="general_info" colspan="4"/>
        <label name="post_treatment_surveillance"/>
        <field name="post_treatment_surveillance"/>
        <label name="post_treatment_surveillance_comment"/>
        <field name="post_treatment_surveillance_comment" colspan="3"/>
    </group>
    <newline/>
    <!-- separator string="Mammograpy Report" id="sep_mammography_report" colspan="4"/ -->
    <group string="Mammography Reports" id="patient_mammography_report">
    </group>

</form>
